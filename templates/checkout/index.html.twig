{% extends 'base.html.twig' %}

{% block title %}Paiement – BTP Consulting{% endblock %}

{% block stylesheets %}
<style>
/* --- CONTAINER --- */
.checkout-container {
  max-width: 550px;
  margin: 4rem auto;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
  padding: 2.5rem;
  font-family: "Inter", "Segoe UI", sans-serif;
}

/* --- TITRE --- */
.checkout-container h1 {
  font-size: 1.8rem;
  color: #003366;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-align: center;
}

/* --- FORM --- */
form {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}

label {
  font-weight: 600;
  color: #333;
  margin-bottom: 0.4rem;
  display: block;
}

input[type="text"],
input[type="email"],
textarea {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 1px solid #d0d7de;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

input:focus,
textarea:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59,130,246,0.15);
}

textarea {
  resize: vertical;
  min-height: 90px;
}

/* --- BOUTON --- */
button[type="submit"] {
  background: linear-gradient(to bottom, #ffa41c, #ff8f00);
  color: #111;
  font-weight: 700;
  font-size: 1rem;
  border: 1px solid #e68a00;
  border-radius: 10px;
  padding: 0.9rem;
  margin-top: 1rem;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.1s ease;
}

button[type="submit"]:hover {
  background: linear-gradient(to bottom, #ff9900, #e68a00);
  transform: translateY(-2px);
}

/* --- INFO PANIER --- */
.checkout-summary {
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 1px solid #eee;
}

.checkout-summary h2 {
  color: #003366;
  font-size: 1.2rem;
  margin-bottom: 1rem;
  font-weight: 600;
}

.checkout-summary ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.checkout-summary li {
  display: flex;
  justify-content: space-between;
  font-size: 0.95rem;
  margin-bottom: 0.6rem;
  border-bottom: 1px dashed #e5e7eb;
  padding-bottom: 0.4rem;
}

.checkout-summary .total {
  margin-top: 1rem;
  font-weight: 700;
  font-size: 1.1rem;
  text-align: right;
  color: #ff6600;
}
</style>
{% endblock %}

{% block body %}
<div class="checkout-container">
  <h1>Finaliser votre commande</h1>
  
  {{ form_start(form) }}
    {{ form_row(form.email, {'label': 'Votre email'}) }}
   
    <button type="submit">Valider la commande</button>
  {{ form_end(form) }}

  <div class="checkout-summary">
    <h2>Récapitulatif du panier</h2>
    <ul>
      {% for line in lines %}
        <li>
          <span>{{ line.p.titre }} × {{ line.qty }}</span>
          <span>{{ (line.unit * line.qty)|number_format(2, ',', ' ') }} €</span>
        </li>
      {% endfor %}
    </ul>
    <div class="total">
      Total : {{ total|number_format(2, ',', ' ') }} €
    </div>
  </div>
   <div>
            {% if app.user %}
    <a href="{{ path('checkout') }}" class="btn btn-success">
        Passer la commande
    </a>
{% else %}
    <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
        Connectez-vous pour passer commande
    </a>
{% endif %}

            </div>
</div>
{% endblock %}
