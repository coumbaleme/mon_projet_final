{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block stylesheets %}
<style>
    /* ===== Layout simple ===== */
    .cart-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    /* ===== Table ===== */
    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

    .cart-table th,
    .cart-table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    .cart-table th {
        background: #f5f5f5;
        text-align: left;
    }

    .cart-product {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .cart-product img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
    }

    /* ===== Quantity ===== */
    .qty-form {
        display: flex;
        justify-content: center;
        gap: 6px;
    }

    .qty-form input {
        width: 60px;
        padding: 4px;
    }

    /* ===== Buttons ===== */
    .btn {
        padding: 8px 14px;
        border-radius: 4px;
        text-decoration: none;
        border: 1px solid #ccc;
        background: #fff;
        cursor: pointer;
    }

    .btn-primary {
        background: #2c7be5;
        color: #fff;
        border-color: #2c7be5;
    }

    .btn-danger {
        background: #e5533d;
        color: #fff;
        border-color: #e5533d;
    }

    /* ===== Footer ===== */
    .cart-footer {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    /* ===== Empty ===== */
    .cart-empty {
        text-align: center;
        padding: 30px;
        color: #666;
    }
</style>
{% endblock %}

{% block body %}
<div class="cart-container">
    <h1>Votre panier</h1>

    {% if lines is empty %}
        <div class="cart-empty">
            <p>Votre panier est vide.</p>
            <a href="{{ path('app_accueil') }}" class="btn">
                ← Continuer vos achats
            </a>
        </div>
    {% else %}
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Qté</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for l in lines %}
                    <tr>
                        <td>
                            <div class="cart-product">
                                <img
                                    src="{{ asset('images/product_image/' ~ l.image) }}"
                                    alt="{{ l.titre }}"
                                >
                                {{ l.titre }}
                            </div>
                        </td>

                        <td>
                            <form action="{{ path('cart_update', { id: l.id }) }}" method="post" class="qty-form">
                                <input type="number" name="qty" min="1" value="{{ l.quantity }}">
                                <button type="submit" class="btn">OK</button>
                            </form>
                        </td>

                        <td>
                            {{ l.lineTotal|number_format(2, ',', ' ') }} €
                        </td>

                        <td>
                            <form action="{{ path('cart_remove', { id: l.id }) }}" method="post">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="cart-footer">
            <strong>Total : {{ total|number_format(2, ',', ' ') }} €</strong>

            {% if total > 0 %}
                <a href="{{ path('checkout') }}" class="btn btn-primary">
                    Passer la commande
                </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
