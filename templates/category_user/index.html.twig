{% extends 'base.html.twig' %}

{% block title %}CategoryUser index{% endblock %}

{% block body %}
    <h1>CategoryUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_user in category_users %}
            <tr>
                <td>{{ category_user.id }}</td>
                <td>
                    <a href="{{ path('app_category_user_show', {'id': category_user.id}) }}">show</a>
                    <a href="{{ path('app_category_user_edit', {'id': category_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_user_new') }}">Create new</a>
{% endblock %}
