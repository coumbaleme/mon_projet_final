{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block stylesheets %}
<style>
  :root {
    --primary:#2c3e50;
    --secondary:#3498db;
    --accent:#f39c12;
    --bg:#f4f6f9;
    --text:#2c3e50;
  }

  body {
    margin:0; font-family:"Segoe UI", sans-serif;
    background:var(--bg); color:var(--text);
    display:flex;
  }

  /* SIDEBAR */
  .sidebar {
    width:220px; min-height:100vh;
    background:var(--primary); color:#fff;
    position:fixed; top:0; left:0;
    display:flex; flex-direction:column;
    padding:1.5rem 1rem;
  }
  .sidebar .logo {
    font-size:1.5rem; font-weight:bold;
    margin-bottom:2rem; text-align:center;
  }
  .sidebar nav a {
    display:block; padding:.8rem 1rem; margin:.3rem 0;
    color:#fff; text-decoration:none; border-radius:6px;
    transition:background .3s;
  }
  .sidebar nav a:hover {
    background:var(--secondary);
  }
  .sidebar .logout {
    margin-top:auto; padding:.8rem 1rem;
    background:var(--accent); border-radius:6px;
    text-align:center; color:#fff; text-decoration:none;
  }

  /* MAIN */
  .main {
    margin-left:220px; flex:1;
    display:flex; flex-direction:column;
    min-height:100vh;
  }

  /* TOPBAR */
  .topbar {
    display:flex; justify-content:space-between; align-items:center;
    background:#fff; padding:1rem 2rem;
    border-bottom:1px solid #ddd;
  }
  .topbar h2 { margin:0; }
  .topbar .user { font-weight:bold; }

  /* DASHBOARD GRID */
  .dashboard {
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
    gap:1.5rem;
    padding:2rem;
    flex:1;
  }
  .card {
    background:#fff; padding:1.5rem; border-radius:10px;
    box-shadow:0 3px 6px rgba(0,0,0,0.1);
  }
  .card h3 { margin-bottom:.8rem; color:var(--secondary); }
  .card p { font-size:.95rem; }

  /* CHART */
  .chart-container {
    background:#fff; padding:1.5rem; border-radius:10px;
    box-shadow:0 3px 6px rgba(0,0,0,0.1);
    grid-column:1/-1;
  }

  /* FOOTER */
 footer {
  background:#2c3e50;
  color:#fff;
  padding:2rem 1rem 1rem;
}
.footer-container {
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
  gap:2rem;
  max-width:1200px;
  margin:0 auto;
}
.footer-col h4 {
  margin-bottom:1rem;
  font-size:1.1rem;
  color:#f39c12;
}
.footer-col p, .footer-col a {
  font-size:.9rem;
  color:#ddd;
  text-decoration:none;
}
.footer-col a:hover { color:#fff; }

.socials a {
  margin-right:.8rem;
  font-size:1.4rem;
  color:#fff;
  transition:color .3s;
}
.socials a:hover { color:#f39c12; }

.newsletter {
  display:flex; gap:.5rem;
}
.newsletter input[type=email] {
  flex:1;
  padding:.5rem;
  border:none;
  border-radius:4px;
}
.newsletter button {
  padding:.5rem 1rem;
  border:none;
  background:#f39c12;
  color:#fff;
  border-radius:4px;
  cursor:pointer;
}
.newsletter button:hover { background:#e67e22; }

.footer-bottom {
  margin-top:2rem;
  text-align:center;
  font-size:.85rem;
  color:#bbb;
  border-top:1px solid rgba(255,255,255,.2);
  padding-top:1rem;
}

</style>
{% endblock %}

