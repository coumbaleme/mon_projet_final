{% extends 'base.html.twig' %}

{% block title %}AdminCatégories {% endblock %}

{% block body %}
    <h1>AdminCatégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin_category_controller in admin_category_controllers %}
            <tr>
                <td>{{ admin_category_controller.id }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': admin_category_controller.id}) }}">Afficher</a>
                    <a href="{{ path('app_admin_category_edit', {'id': admin_category_controller.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Créer nouveau</a>
{% endblock %}
