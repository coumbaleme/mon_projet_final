{# templates/security/logged_out.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Déconnecté{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    :root {
      --bg: #f9f9f9;
      --text: #333;
      --accent: #0073e6;
      --radius: 6px;
    }
    body {
      background: var(--bg);
      color: var(--text);
      display: flex;
      justify-content: center;
      align-items: center;
      height: calc(100vh - 60px);
      margin: 0;
      font-family: Arial, sans-serif;
    }
    .logout-panel {
      background: #fff;
      padding: 2rem;
      text-align: center;
      border-radius: var(--radius);
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      max-width: 360px;
      width: 100%;
    }
    .logout-panel h1 {
      color: var(--accent);
      margin-bottom: 1rem;
      font-size: 1.6rem;
    }
    .logout-panel p { margin-bottom: 1.5rem; }
    .logout-panel a.btn {
      display: inline-block;
      padding: .8em 1.5em;
      background: var(--accent);
      color: #fff;
      border-radius: var(--radius);
      text-decoration: none;
      font-size: 1rem;
      transition: opacity .3s;
    }
    .logout-panel a.btn:hover { opacity: .85; }
  </style>
{% endblock %}

{% block body %}
  <div class="logout">
    <h1>Vous êtes déconnecté</h1>
    <p>Merci de votre visite ! À bientôt.</p>
    <a class="btn" href="{{ path('app_home') }}">Retour à l’accueil</a>
  </div>
{% endblock %}
