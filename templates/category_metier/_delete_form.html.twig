<form method="post" action="{{ path('app_product_delete', {'id':  category_metier.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category_metier.id) }}">
    
    <button class="btn btn-danger btn-sm" title="Supprimer">
        <i class="fa-solid fa-xmark"></i>
    </button>
</form>
