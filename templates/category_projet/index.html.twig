{% extends 'base.html.twig' %}

{% block title %}CategoryProjet{% endblock %}

{% block body %}
    <h1>CategoryProjet </h1>

    <table class="table">
        <thead>
            <tr>
                <tr>
                <th>Id</th>
                <th>nom</th>
                <th>description
            </th>
            <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_projet in category_projets %}
            <tr>
                <td>{{ category_projet.id }}</td>
                <td>{{ category_projet.nom }}</td>

                <td>{{ category_projet.description|slice(0,10) }} ...</td>
                <td><img style="width: 30px; height: 30px;" src="{{ asset('images/product_image/' ~ category_projet.image) }}" alt=""></td>
                <td>
                    <a href="{{ path('app_category_projet_show', {'id': category_projet.id}) }}">Afficher</a>
                    <a href="{{ path('app_category_projet_edit', {'id': category_projet.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_projet_new') }}">Créer nouveau</a>
{% endblock %}
