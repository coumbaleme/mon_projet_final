{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Votre panier</h1>

    {% if panier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in panier %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ (item.product.price / 100)|number_format(2, ',', ' ') }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ (item.subtotal / 100)|number_format(2, ',', ' ') }} €</td>
                        <td>
                            {# Les liens pour ajouter/enlever/supprimer (à adapter avec tes routes) #}
                            <a href="{{ path('panier_ajouter', {'product_id': loop.index0}) }}" class="btn btn-success">+</a>
                            <a href="{{ path('panier_enlever', {'product_id': loop.index0}) }}" class="btn btn-warning">-</a>
                            <a href="{{ path('panier_supprimer', {'product_id': loop.index0}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total</td>
                    <td>{{ (total / 100)|number_format(2, ',', ' ') }} €</td>
                    <td>
                        <a href="{{ path('panier_vider') }}" class="btn btn-danger">Vider</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    {% endif %}
</div>
{% endblock %}
