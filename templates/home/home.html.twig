{% extends 'base.html.twig' %}
{% block title %}BTP_Consulting
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  .hero {
    display: flex; align-items: center;
    background: #f0f4f8;
    padding: 3em;
  }
  .hero-text {
    flex: 1;
  }
  .hero-text h1 {
    font-size: 2.5rem; margin-bottom: 0.5em;
  }
  .hero-text p {
    font-size: 1.1rem; margin-bottom: 1.5em;
  }
  .hero-text a {
    display: inline-block;
    padding: 0.8em 2em;
    background: #1e3a8a; color: #fff;
    border-radius: 4px;
    text-decoration: none;
  }
  .hero-img {
    flex: 1;
  }
  .hero-img img {
    width: 100%; border-radius: 8px;
  }
  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px,1fr));
    gap: 1rem;
    padding: 2em;
    background: #fff;
  }
  .card {
    background: #f9fafb;
    padding: 1.5em;
    border-radius: 6px;
    text-align: center;
  }
  .card h3 { margin-bottom: 0.5em; }
  .card p { font-size: 0.95rem; margin-bottom: 1em; color: #555; }
  .card a {
    color: #1e3a8a;
    text-decoration: none;
    font-weight: bold;
  }
</style>
{% endblock %}

{% block body %}
<section class="hero">
  <div class="hero-text">
    <h1>Nous sommes la meilleure entreprise de construction</h1>
    <p>Excellence, innovation et sécurité pour tous vos projets de construction.</p>
    <a href="accueil" class="btn-cta">Découvrir nos services</a>

  </div>
  <div class="hero-img">
    <img src="{{ asset('https://cdn.prod.website-files.com/62987134cee3f41ed59eeb9d/63073870dfc361717234e245_mini-pelle-5t.png') }}" alt="Engin de chantier">
  </div>
</section>

<section class="cards">
  {% for card in cards %}
    <div class="card">
      <h3>{{ card.number }}. {{ card.title }}</h3>
      <p>{{ card.description }}</p>
      
    </div>
  {% endfor %}
</section>
{% endblock %}
