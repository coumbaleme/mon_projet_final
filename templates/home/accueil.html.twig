{% extends 'base.html.twig' %}

{% block title %}Accueil – BTP Consulting{% endblock %}

{% block stylesheets %}
<style>

</style>
{% endblock %}

{% block body %}

<section class="hero">
  <div class="hero-text">
    <h1>Nous sommes parmi les meilleures entreprises de construction</h1>
    <p>Excellence, innovation et sécurité pour tous vos projets de construction.</p>
    <a href="#services">Découvrir nos services</a>
  </div>
  <div class="hero-img">
    <img src="https://cdn.prod.website-files.com/62987134cee3f41ed59eeb9d/63073870dfc361717234e245_mini-pelle-5t.png" alt="Engin de chantier">
  </div>
</section>

<!-- SECTION PRODUITS -->
<section id="produits">
  <h2>Nos Produits</h2>

  {% if product is not empty %}
    <div id="produitsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="400">
      <div class="carousel-inner">
        {% for produit in product %}
          <div class="carousel-item {% if loop.first %}active{% endif %}">
            <div class="d-flex justify-content-center">
              <div style="background:white; width:85%; max-width:500px; padding:1.5rem; border-radius:12px; text-align:center; box-shadow:0 3px 10px rgba(0,0,0,0.15);">
                {% if produit.image %}
                  <img src="{{ asset('images/product_image/' ~ produit.image) }}" alt="{{ produit.titre }}" style="width:100%; height:350px; object-fit:cover; border-radius:8px;">
                {% else %}
                  <img src="{{ asset('images/placeholder.png') }}" alt="Image non disponible" style="width:100%; height:350px; object-fit:cover; border-radius:8px; opacity:0.6;">
                {% endif %}
                <h3 style="margin:1rem 0; color:#ff6600;">{{ produit.titre }}</h3>
                {% if produit.stock < 3 %}
                  <p class="text-danger fw-bold mb-2">Bientôt rupture de stock</p>
                {% endif %}
                <p style="font-size:0.95rem; color:#555;">
                  {{ produit.description|length > 150 ? produit.description|slice(0,150) ~ '...' : produit.description }}
                </p>
                <form action="{{ path('cart_add', { id: produit.id }) }}" method="post" style="margin-top:1rem;">
                  <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart_' ~ produit.id) }}">
                  <div style="display:flex; justify-content:center; align-items:center; gap:0.5rem;">
                    <label for="qty_{{ produit.id }}" style="font-weight:bold;">Quantité :</label>
                    <input id="qty_{{ produit.id }}" type="number" name="quantity" max="{{ produit.stock }}" min="1" value="1" style="width:70px; text-align:center;">
                    <button type="submit" class="btn btn-warning fw-bold text-white">Ajouter au panier</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <button class="carousel-control-prev" type="button" data-bs-target="#produitsCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="filter:invert(1);"></span>
        <span class="visually-hidden">Précédent</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#produitsCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true" style="filter:invert(1);"></span>
        <span class="visually-hidden">Suivant</span>
      </button>
    </div>
  {% else %}
    <p class="text-center text-white">Aucun produit disponible pour le moment.</p>
  {% endif %}
</section>

<!-- STATS -->
