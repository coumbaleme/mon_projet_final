{% extends 'base.html.twig' %}
{% block title %}Créer un compte{% endblock %}
{% block body %}
<div class="signup-container">
  <h1>Créer un compte</h1>
  {{ form_start(registrationForm, {'attr': {'class':'signup-form'}}) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword.first) }}
    {{ form_row(registrationForm.plainPassword.second) }}
    <button type="submit" class="btn btn-primary">Continuer</button>
  {{ form_end(registrationForm) }}

  <div class="social-login">
    <button class="btn btn-social btn-google">Connexion avec Google</button>
    <button class="btn btn-social btn-apple">Connexion avec Apple</button>
  </div>
  <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
</div>
{% endblock %}
